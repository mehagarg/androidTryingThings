<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateFlowEgActivity">

    <TextView
        android:id="@+id/stateflowCounterUsingLiveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hello World from Livedata!"
        app:layout_constraintBottom_toTopOf="@id/stateflowCounterUsingStateFlow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stateflowCounterUsingStateFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hello World from State Flow!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stateflowCounterUsingLiveData" />

    <Button
        android:id="@+id/incrementCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="increment"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/decrementCount"
        app:layout_constraintTop_toBottomOf="@id/stateflowCounterUsingStateFlow" />

    <Button
        android:id="@+id/decrementCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="decrement"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@id/incrementCount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stateflowCounterUsingStateFlow" />


</androidx.constraintlayout.widget.ConstraintLayout>